<% if resource.s.any? %>
  <div id="_explanation">
    <h2>
      <%= I18n.t("s.messages.not_saved",
                 count: resource.s.count,
                 resource: resource.class.model_name.human.downcase)
       %>
    </h2>
    <ul>
      <% resource.s.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
