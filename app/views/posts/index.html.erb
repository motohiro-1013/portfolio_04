<%= render "shared/flash_messages" %>

    <div class="container">
        <h3 class="title">投稿一覧</h3>
        <%= link_to("新しく旅を記録する", new_post_path, class:"btn btn-primary btn-lg") %>
        <hr>
        <div class="row">
            <div class="col">
                <% @posts.each do |post| %>
                    <%= link_to edit_post_path(post) do %>
                        <div class="d-inline-flex p-2 col-lg-5">
                            <%= image_tag(post.image_url(:thumb)) %>
                            <%= post.name %>
                        </div>
                    <% end %>
                <% end %>
            </div>
        </div>
    </div>
<hr>
    <div class="photo_index">
        <%= link_to new_post_path do %>
            <div class="d-flex">
                <div class="country_image_index"><%= image_tag "asia.jpg", size:"400x300"%>
                    <div class="mask">
                        <div class="caption">アジア</div>
                    </div>
                </div>
                <div class="country_image_index"><%= image_tag "africa.jpg", size:"400x300"%>
                    <div class="mask">
                        <div class="caption">アフリカ</div>
                    </div>
                </div>
                <div class="country_image_index"><%= image_tag "europe.jpg", size:"400x300"%>
                    <div class="mask">
                        <div class="caption">ヨーロッパ</div>
                    </div>
                </div>
            </div>
            <div class="d-flex">
                <div class="country_image_index"><%= image_tag "n_america.jpg", size:"400x300"%>
                    <div class="mask">
                        <div class="caption">北米</div>
                    </div>
                    </div>
                <div class="country_image_index"><%= image_tag "s_america.jpg", size:"400x300"%>
                    <div class="mask">
                        <div class="caption">南米</div>
                    </div>
                </div>
                <div class="country_image_index"><%= image_tag "oceania.jpg", size:"400x300"%>
                    <div class="mask">
                        <div class="caption">オセアニア</div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>

