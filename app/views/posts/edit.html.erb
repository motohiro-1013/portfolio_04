<div class="container">
    <%= render "shared/flash_messages" %>

    <%= form_with(model: @post, local: true, multipart: :true) do |f| %>
        <div class="post">
            <form action="index.html" method="post">

                <div class="form-image">
                    <%= image_tag @post.image_url, class:"image", size:"400x300"%>
                </div>

                <div class="form-group">
                    <label for="name">国・スポット</label>
                    <%= f.text_field @post.name, class:"form-control"%>
                </div>

                <div class="form-group">
                    <label for="message">本文</label>
                    <%= f.text_field @post.text, class:"form-control"%>
                </div>

                <div class="form-group">
                    <%= f.file_field @post.image %>
                </div>

                <%= f.submit "編集完了", class: "btn btn-primary btn-lg btn-block"%>
                <%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-danger btn-lg btn-block" %>
            </form>
        </div>
    <% end %>
</div>